{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container text-center">
    My Projects
    <div class="row">
       {% for project in projects %}
           <div class="col-md-4 mt-4">
               <div class="card profile-card-5">
                   <div class="card-img-block">
                       <img src="https://en.wikipedia.org/wiki/File:Node.js_logo.svg" alt="" class="card-img-top" alt="Project image">

                   </div>
                   <div class="card-body">
                       <h5 class="card-title">
                           {{project.title   }}
                       </h5>
                       <p class="card-text">
                           {{project.introduction}}
                       </p>
                       <div class="projects-links d-flex justify-content-between">
                           <a href="{{ project.url }}" target="_blank" class="btn outline-dark">
                               <i class="fab fa-github"></i>
                               Github
                           </a>
                           <a href="{{ path('project_detail',{'id' : project.id}) }}" class="btn btn-outline-info">
                               <i class="fab fa-info-circle"></i>
                               En savoir plus
                           </a>
                       </div>
                   </div>
               </div>
           </div>
       {% endfor %}
    </div>
</div>
{% endblock %}
